{
  "uid": "tc-overview",
  "title": "Town Council - Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["town-council", "overview"],
  "panels": [
    {
      "type": "timeseries",
      "title": "API Requests / sec",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(tc_http_requests_total[5m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API p95 Latency (s)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(tc_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API 5xx Rate",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(tc_http_requests_total{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx/sec"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Worker Task p95 Duration (s)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(tc_celery_task_duration_seconds_bucket[10m])) by (le, task_name))",
          "legendFormat": "{{task_name}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres Connections",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(pg_stat_activity_count) by (datname)",
          "legendFormat": "{{datname}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Redis Memory Used (MB)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes / 1024 / 1024",
          "legendFormat": "used_mb"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Catalog Count (tc_documents_total)",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "tc_documents_total",
          "legendFormat": "catalog"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Age Since Last Crawl (hours)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "(time() - tc_last_crawl_timestamp) / 3600",
          "legendFormat": "hours"
        }
      ]
    }
  ]
}

